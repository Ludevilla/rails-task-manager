<div>
  <%= form_with model: task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <% if local_assigns[:display] %>
      <div>
        <%= f.label :completed %>
        <%= f.check_box :completed %>
      </div>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>
